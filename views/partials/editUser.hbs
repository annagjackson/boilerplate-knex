<form class="form-inline" action="/profile/{{id}}" method="POST">
  <div class="form-group">
    <label for="inputName">Name</label>
    <input type="text" class="form-control" name="name" id="inputName" value="{{name}}">
  </div>
  <div class="form-group">
    <label for="inputEmail">Email</label>
    <input type="email" class="form-control" name="email" id="inputEmail" value="{{email}}" size="30">
  </div>
  <div class="form-group">
    <label for="inputImage">Image URL</label>
    <input type="url" class="form-control" name="image" id="inputImage" value="{{image}}" size="75">
  </div>
  <button type="submit" class="btn btn-primary">Update Animal</button>
</form>
